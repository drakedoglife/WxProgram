/* pages/posts/posts_template/posts_template.wxss */

.post-container {
  margin-top: 20px;
  display: flex;
  flex-flow: column nowrap;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.post-author {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.post-author-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.post-author-text {
  font-size: 26rpx;
  color: #333;
}

.post-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.post-image {
  width: 100%;
  height: 450rpx;
  margin-top: 10rpx;
}

.post-content {
  widows: 100%;
  padding: 10px;
  font-size: 28rpx;
  color: gray;
}

.post-info {
  margin-top: 10rpx;
  margin-left: 20rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.post-info-container {
  margin-right: 20rpx;
}

.post-info-image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
