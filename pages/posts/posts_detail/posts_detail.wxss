/* pages/posts/posts_detail/posts_detail.wxss */
.detail-image {
  width: 100%;
  height: 500rpx;
}

.detail-container {
  padding: 20rpx;
  display: felx;
  flex-flow: column nowrap;
}

.detail-author {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.detail-author-image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}

.detail-author-name {
  font-size: 35rpx;
  color: #333;
  margin-right: 20rpx;
}

.detail-author-default-text {
  font-size: 30rpx;
  color: gray;
  margin-right: 40rpx;
}

.detail-author-time {
  font-size: 26rpx;
  color: gray;
}

.detail-title {
  font-size: 40rpx;
  font-weight: 600;
  margin-left: 20rpx;
}

.detail-bar {
  margin-top: 20rpx;
}

.detail-image-container {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-end;
  margin-right: 20rpx;
}

.detail-bar-image {
  width: 80rpx;
  height: 80rpx;
}

.detail-bar-share {
  margin-left: 40rpx;
}

.detail-bar-break {
  width: 660rpx;
  height: 1px;
  background: #ccc;
  margin: 0 auto;
  position: relative;
  bottom: 20px;
  z-index: -99;
}

.detail-content {
  font-size: 28rpx;
  color: gray;
  letter-spacing: 2rpx;
  padding: 20rpx;
}